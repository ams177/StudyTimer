<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studytimer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.studytimer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.studytimer.TimerPage"
            android:label="@string/title_activity_timer_page"
            android:parentActivityName="com.example.StudyTimer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.StudyTimer.MainActivity" />
        </activity>
        <activity
            android:name="com.example.studytimer.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.example.studytimer.EditSubjects"
            android:label="@string/title_activity_edit_subjects"
            android:parentActivityName="com.example.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.MainActivity" />
        </activity>
        <activity
            android:name="com.example.studytimer.ViewResults"
            android:label="@string/title_activity_view_results"
            android:parentActivityName="com.example.studytimer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.studytimer.MainActivity" />
        </activity>
        <activity
            android:name="com.example.studytimer.CreateNewSubject"
            android:label="@string/title_activity_create_new_subject"
            android:parentActivityName="com.example.studytimer.EditSubjects" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.studytimer.EditSubjects" />
        </activity>
    </application>

</manifest>
