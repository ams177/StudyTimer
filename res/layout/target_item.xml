<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/color"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:paddingBottom="4dp"
        android:contentDescription="@string/Week"
        android:src="@drawable/color_red" >
    </ImageView>
    
    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
		android:layout_marginBottom="4dp"
		android:paddingBottom="4dp"
        android:contentDescription="@string/Week"
        android:src="@drawable/icon_pencil" >
    </ImageView>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/color"
        android:layout_toRightOf="@+id/icon"
        android:layout_marginTop="-5dp"
        android:text="@+id/label"
        android:textSize="18sp" />
	
	<TextView
        android:id="@+id/timeStudied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_toRightOf="@+id/icon"
        android:layout_marginTop="-3dp"
        android:textStyle="bold"
        android:text="@string/timeStudied"
        android:textSize="12sp" />
	
    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_toRightOf="@+id/timeStudied"
        android:layout_marginTop="-3dp"
        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        android:text="@+id/counter"
        android:textSize="12sp" />

</RelativeLayout> 